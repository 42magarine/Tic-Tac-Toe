{
	"name": "tic_tac_toe",
	"version": "1.0.0",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"build": "tsc && npm run build:css",
		"watch": "concurrently \"tsc --watch\" \"npm run watch:css\"",
		"server": "node ./dist/app.js",
		"build:css": "npx tailwindcss -i styles/_index.css -o dist/styles/main.css",
		"watch:css": "postcss styles/_index.css -o dist/styles/main.css --use @tailwindcss/postcss autoprefixer --watch",
		"dev": "concurrently \"npm run watch\" \"npm run server\""
	},
	"dependencies": {
		"@fastify/static": "^8.1.1",
		"@fastify/view": "^11.0.0",
		"@fastify/websocket": "^11.0.2",
		"@types/ejs": "^3.1.5",
		"@types/node": "^22.13.14",
		"@types/ws": "^8.18.0",
		"ejs": "^3.1.10",
		"fastify": "^5.2.2",
		"typescript": "^5.8.2"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.1.2",
		"postcss": "^8.5.3",
		"postcss-cli": "^11.0.1",
		"tailwindcss": "^3.3.3"
	}
}